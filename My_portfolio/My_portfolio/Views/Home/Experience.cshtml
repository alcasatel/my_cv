@model Metanit.Models.User

<div class="section" id="experience">
    <div class="container cc-experience">
        <div class="h4 text-center mb-4 title">Опыт работы</div>

        @foreach (var item in @Model.Experiences)
        {
            string endDate = "", beginDate = item.BeginDate.ToString("MMMM yyyy");
            if (item.EndDate == null)
            {
                endDate = "по настоящее время";
            }
            else
            {
                endDate = item.EndDate?.ToString("MMMM yyyy");
            }

            <div class="card">
                <div class="row">
                    <div class="col-md-3 bg-primary" data-aos="fade-right" data-aos-offset="50" data-aos-duration="500">
                        <div class="card-body cc-experience-header">
                            <p>
                                @beginDate - @endDate
                            </p>
                            <div class="h5">@item.Name</div>
                        </div>
                    </div>
                    <div class="col-md-9" data-aos="fade-left" data-aos-offset="50" data-aos-duration="500">
                        <div class="card-body">
                            <div class="h5">@item.Vocation</div>
                            <p>@item.About</p>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
