<div class="section" id="about">
    <div class="container">
        <div class="card" data-aos="fade-up" data-aos-offset="10">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="card-body">
                        <div class="h4 mt-0 title">Обо мне</div>
                        @Html.Raw(@ViewBag.about)
                        <a href="https://templateflip.com/templates/creative-cv/" target="_blank">Узнать больше</a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="card-body">
                        <div class="h4 mt-0 title">Основная информация</div>
                        <div class="row">
                            <div class="col-sm-4"><strong class="text-uppercase">Возраст:</strong></div>
                            <div class="col-sm-8">@ViewBag.age</div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"><strong class="text-uppercase">Email:</strong></div>
                            <div class="col-sm-8">@ViewBag.email</div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"><strong class="text-uppercase">Телефон:</strong></div>
                            <div class="col-sm-8">@ViewBag.phone</div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"><strong class="text-uppercase">Адрес:</strong></div>
                            <div class="col-sm-8">@ViewBag.adress</div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"><strong class="text-uppercase">Языки:</strong></div>
                            <div class="col-sm-8">@ViewBag.lang</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>